@model IEnumerable<Image>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<h2>Images</h2>

    <div><a asp-controller="Image" asp-action="Create" class="btn btn-primary mb">Add New Image</a></div>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image1</th>
            <th scope="col">Image2</th>
            <th scope="col">Image3</th>
            <th scope="col">Image4</th>
            <th scope="col">Image Id</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Image item in Model)
        {
        <tr>
            <th scope="row">@count</th>
            <td>
                <img src="~/img/@item.Image1" width="200px" height="100px" /> <button class="btn btn-warning btn-xs">
                    <a asp-controller="Image" asp-action="Update" asp-route-id="@item.Id">
                        <i class="fa fa-pencil"></i>
                    </a>
                </button>
            </td>
            <td>
                <img src="~/img/@item.Image2" width="200px" height="100px" /> <button class="btn btn-warning btn-xs">
                    <a asp-controller="Image" asp-action="Update1" asp-route-id="@item.Id">
                        <i class="fa fa-pencil"></i>
                    </a>
                </button>
            </td>
            <td>
                <img src="~/img/@item.Image3" width="200px" height="100px" /> <button class="btn btn-warning btn-xs">
                    <a asp-controller="Image" asp-action="Update2" asp-route-id="@item.Id">
                        <i class="fa fa-pencil"></i>
                    </a>
                </button>
            </td>
            <td>
                <img src="~/img/@item.Image4" width="200px" height="100px" /> <button class="btn btn-warning btn-xs">
                    <a asp-controller="Image" asp-action="Update3" asp-route-id="@item.Id">
                        <i class="fa fa-pencil"></i>
                    </a>
                </button>
            </td>
            <td>@item.Id</td>
            <td>
               
                <button class="btn btn-danger btn-xs">
                    <a asp-controller="Image" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa fa-trash-o "></i>
                    </a>
                </button>
            </td>
        </tr>
            count++;
        }
    </tbody>
</table>
