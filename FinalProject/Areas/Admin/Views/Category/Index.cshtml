@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

    <h2>Category</h2>

<div><a asp-controller="Category" asp-action="Create" class="btn btn-primary mb">Add New Category</a></div>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Category Id</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Category item in Model)
        {
            <tr>
                <th scope="row">@count</th>
                <td>@item.Name</td>
                <td>@item.Id</td>
            </tr>
            count++;
        }
    </tbody>
</table>
